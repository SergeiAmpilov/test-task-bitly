// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model UserModel {
  id       Int         @id @default(autoincrement())
  email    String      @unique
  password String
  name     String
  link     LinkModel[]
}

model LinkModel {
  id        Int       @id @default(autoincrement())
  link      String
  shortlink String
  userid    Int
  user      UserModel @relation(fields: [userid], references: [id])
}
